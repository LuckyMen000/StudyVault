generator client {
  provider = "prisma-client-js"
  output   = "./src/db/generated/client"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:Begzat123@localhost:5432/study?schema=public"
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  role String
}

model Homework {
  id      Int    @id @default(autoincrement())
  content String
}

model Document {
  id    Int    @id @default(autoincrement())
  title String
  url   String
}
